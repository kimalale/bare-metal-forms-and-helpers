<%= form_with model: @user do | form | %>
<div>
    <%= form.label :username , "Enter Username here:" %>
    <%= form.text_field :username, placeholder: "Your user name here" %>

    <% @user.errors.full_messages_for(:username).each do |message| %>
      <div><%= message %></div>
    <% end %>
</div>

<div>
<%= form.label :email %>
<%= form.text_field :email, placeholder: "Your email here"  %>
    <% @user.errors.full_messages_for(:email).each do |message| %>
      <div><%= message %></div>
    <% end %>
</div>

<div>
<%= form.label :password %>
<%= form.password_field :password, placeholder: "Your password here"  %>
    <% @user.errors.full_messages_for(:password).each do |message| %>
      <div><%= message %></div>
    <% end %>
</div>
<%= form.submit%>
<% end %>